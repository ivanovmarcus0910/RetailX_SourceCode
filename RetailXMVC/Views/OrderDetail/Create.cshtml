@model BusinessObject.Models.OrderDetail
@{
    Layout = "_SellerLayout";
}
<h2>Thêm sản phẩm vào hóa đơn #@Model.OrderId</h2>

<form asp-action="Create" method="post">

    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label>Sản phẩm</label>
        <select asp-for="ProductId"
                asp-items="@(new SelectList(ViewBag.Products, "ProductId", "ProductName"))"
                class="form-control">
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Số lượng</label>
        <input asp-for="Quantity" class="form-control" min="1" />
    </div>

    <button class="btn btn-success mt-3">Thêm</button>

    <a asp-action="Detail"
       asp-route-id="@Model.OrderId"
       class="btn btn-secondary mt-3">
        Quay lại
    </a>
</form>
