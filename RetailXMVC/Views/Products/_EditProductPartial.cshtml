@model BusinessObject.Models.Product

@{
    Layout = null; // Partial view
    var categories = ViewBag.CategoryId as SelectList;
    var suppliers = ViewBag.SupplierId as SelectList;
}

<form id="editProductForm" asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductId" />

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="categories"></select>
    </div>

    <div class="mb-3">
        <label asp-for="SupplierId" class="form-label"></label>
        <select asp-for="SupplierId" class="form-select" asp-items="suppliers"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3 text-end">
        <button type="submit" class="btn btn-primary rounded-pill">Save</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).on("submit", "#editProductForm", function(e){
            e.preventDefault();
            var form = $(this);
            $.ajax({
                type: "POST",
                url: form.attr("action"),
                data: form.serialize(),
                success: function(response){
                    if(response.success){
                        $('#editModal').modal('hide');
                        location.reload(); // reload để thấy thay đổi
                    } else {
                        $("#editModalContent").html(response);
                    }
                }
            });
        });
    </script>
}
