@model BusinessObject.Models.Product

@{
    Layout = null;
    var categories = ViewBag.CategoryId as SelectList;
    var suppliers = ViewBag.SupplierId as SelectList;
}

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold text-primary">
        <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa Sản phẩm
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="editProductForm" asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductId" />

    <div class="modal-body pt-4">
        
        <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2 mb-3" role="alert"></div>

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label fw-semibold text-secondary small text-uppercase">
                Tên sản phẩm <span class="text-danger">*</span>
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-tag"></i></span>
                <input asp-for="ProductName" class="form-control border-start-0 ps-0" placeholder="Nhập tên sản phẩm..." />
            </div>
            <span asp-validation-for="ProductName" class="text-danger small mt-1"></span>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label asp-for="CategoryId" class="form-label fw-semibold text-secondary small text-uppercase">Danh mục</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-folder"></i></span>
                    <select asp-for="CategoryId" class="form-select border-start-0 ps-0" asp-items="categories"></select>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="SupplierId" class="form-label fw-semibold text-secondary small text-uppercase">Nhà cung cấp</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-truck"></i></span>
                    <select asp-for="SupplierId" class="form-select border-start-0 ps-0" asp-items="suppliers"></select>
                </div>
            </div>
        </div>

        <div class="row g-3 mb-2">
            <div class="col-md-6">
                <label asp-for="Quantity" class="form-label fw-semibold text-secondary small text-uppercase">
                    Số lượng <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-layers"></i></span>
                    <input asp-for="Quantity" class="form-control border-start-0 ps-0" type="number" min="0" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger small mt-1"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Price" class="form-label fw-semibold text-secondary small text-uppercase">
                    Giá bán (VNĐ) <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-currency-dollar"></i></span>
                    <input asp-for="Price" class="form-control border-start-0 ps-0" type="number" min="0" step="1000" />
                </div>
                <span asp-validation-for="Price" class="text-danger small mt-1"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer border-top-0 pt-0 pb-4 px-4">
        <button type="button" class="btn btn-light text-secondary fw-bold" data-bs-dismiss="modal">Hủy bỏ</button>
        <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm">
            <i class="bi bi-check-lg me-1"></i> Lưu thay đổi
        </button>
    </div>
</form>

<script>
    // Re-parse validator cho nội dung mới load bằng AJAX (để validate client-side hoạt động)
    if ($.validator && $.validator.unobtrusive) {
        $.validator.unobtrusive.parse("#editProductForm");
    }

    $(document).off("submit", "#editProductForm").on("submit", "#editProductForm", function (e) {
        e.preventDefault();
        var form = $(this);

        // Kiểm tra validate trước khi gửi
        if (!form.valid()) return false;

        $.ajax({
            type: "POST",
            url: form.attr("action"),
            data: form.serialize(),
            success: function (response) {
                if (response.success) {
                    $('#editModal').modal('hide');
                    // Reload lại trang hoặc gọi hàm load lại bảng dữ liệu
                    location.reload(); 
                } else {
                    // Nếu lỗi server (ví dụ model state invalid), load lại form kèm thông báo lỗi
                    $("#editModalContent").html(response);
                }
            },
            error: function () {
                alert("Đã xảy ra lỗi khi xử lý yêu cầu.");
            }
        });
    });
</script>