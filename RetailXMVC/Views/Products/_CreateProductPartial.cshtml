@model BusinessObject.Models.Product
@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { id = "createProductForm" }))
{
    @Html.AntiForgeryToken()  <!-- Bắt buộc có -->

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
    </div>

    <div class="mb-3">
        <label asp-for="SupplierId" class="form-label"></label>
        <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierId"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3 text-end">
        <button type="submit" class="btn btn-primary rounded-pill">Create</button>
    </div>
}
