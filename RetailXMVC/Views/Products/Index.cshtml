@model IEnumerable<BusinessObject.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Products</h2>

<div class="mb-3 d-flex justify-content-between align-items-center flex-wrap">
    <!-- Search + Filter Form -->
    <form method="get" class="d-flex mb-2">
        <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control me-2" placeholder="Search product..." />

        @Html.DropDownList(
            "categoryId", 
            ViewBag.Categories as SelectList, 
            "All Categories", 
            new { @class = "form-select me-2" }
        )

        <button type="submit" class="btn btn-primary rounded-pill">Filter</button>
    </form>

    <!-- Create Button -->
   <button type="button" class="btn btn-primary rounded-pill" id="btnCreateModal" data-bs-toggle="modal" data-bs-target="#createModal">
    Add Product
</button>

</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Supplier)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@String.Format("{0:N0} ₫", item.Price)</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.Supplier.SupplierName</td>
                        <td class="@(item.Quantity < 10 ? "text-danger fw-bold" : "")">@item.Quantity</td>
                        <td class="text-center">
                        <a href="javascript:void(0)" class="btn btn-sm btn-warning rounded-pill me-1 btn-edit"
                           data-id="@item.ProductId">
                           Edit
                        </a>                            
                      <a href="javascript:void(0);" class="btn btn-sm btn-danger rounded-pill btn-delete" data-id="@item.ProductId">
                            Delete
                         </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No products available</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createModalContent">
                <!-- AJAX sẽ load PartialView vào đây -->
            </div>
        </div>
    </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="editModalContent">
                <!-- AJAX sẽ load PartialView Edit vào đây -->
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="deleteModalContent">
                <!-- Nội dung sẽ load bằng AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).on("submit", "#createProductForm", function(e){
            e.preventDefault();

            var form = $(this);
            $.ajax({
                type: "POST",
                url: form.attr("action"),
                data: form.serialize(),
                success: function(response){
                    if(response.success){
                        $('#createModal').modal('hide');
                        location.reload(); // reload Index để thấy sản phẩm mới
                    } else {
                        $("#createModalContent").html(response);
                    }
                }
            });
        });

        // load form Create vào modal khi click button
        $("#btnCreateModal").click(function() {
            $.get('@Url.Action("Create","Products")', function(data) {
                $("#createModalContent").html(data);
            });
        });

        $(document).on("click", ".btn-edit", function(){
    var id = $(this).data("id");
    $.get('@Url.Action("Edit","Products")', { id: id }, function(data){
        $("#editModalContent").html(data);
        $("#editModal").modal("show");
    });
});

$(document).on("click", ".btn-delete", function(){
    var id = $(this).data("id");
    $.get('@Url.Action("Delete","Products")', { id: id }, function(data){
        $("#deleteModalContent").html(data);
        $("#deleteModal").modal("show");
    });
});

    </script>
}

<style>
    table.table-hover tbody tr:hover { background-color: #f2f2f2; }
    table td.text-center { vertical-align: middle; }
    .btn-warning { background-color: #f0ad4e; border-color: #f0ad4e; color: white; transition: all 0.2s; }
    .btn-warning:hover { background-color: #ec9d4a; border-color: #ec9d4a; color: white; }
    .btn-danger { background-color: #d9534f; border-color: #d9534f; color: white; transition: all 0.2s; }
    .btn-danger:hover { background-color: #c9302c; border-color: #c9302c; color: white; }
    .btn-primary { background-color: #4e73df; border-color: #4e73df; color: white; transition: all 0.2s; }
    .btn-primary:hover { background-color: #3c5ec0; border-color: #3c5ec0; color: white; }

</style>
