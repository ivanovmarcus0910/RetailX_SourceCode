@{
    ViewData["Title"] = "Tổng quan kho hàng";

    var lowStock = ViewBag.LowStock as List<BusinessObject.Models.Product>;
    var monthlyImport = ViewBag.MonthlyImport as List<dynamic>;
    var categoryStock = ViewBag.CategoryStock as List<dynamic>;
}

<div class="container-fluid p-0">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">📊 Tổng quan kho hàng</h2>
            <p class="text-muted mb-0">Thống kê và theo dõi hiệu suất hoạt động của kho.</p>
        </div>
        <div>
            <button class="btn btn-light border shadow-sm me-2" onclick="window.location.reload();">
                <i class="bi bi-arrow-clockwise"></i> Làm mới
            </button>
            <a href="@Url.Action("ImportReport", "InventoryDashboard")" class="btn btn-primary shadow-sm">
                <i class="bi bi-file-earmark-text"></i> Xem báo cáo
            </a>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-start border-4 border-primary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase text-muted fw-bold mb-1 small">Tổng sản phẩm</p>
                            <h3 class="fw-bold text-dark mb-0">@ViewBag.TotalProducts</h3>
                        </div>
                        <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-3">
                            <i class="bi bi-box-seam fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Products")" class="text-primary text-decoration-none small fw-bold">
                            Quản lý sản phẩm <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-start border-4 border-success h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase text-muted fw-bold mb-1 small">Danh mục</p>
                            <h3 class="fw-bold text-dark mb-0">@ViewBag.TotalCategories</h3>
                        </div>
                        <div class="icon-shape bg-success bg-opacity-10 text-success rounded-3">
                            <i class="bi bi-tags fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Categories")" class="text-success text-decoration-none small fw-bold">
                            Quản lý danh mục <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-start border-4 border-info h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase text-muted fw-bold mb-1 small">Nhà cung cấp</p>
                            <h3 class="fw-bold text-dark mb-0">@ViewBag.TotalSuppliers</h3>
                        </div>
                        <div class="icon-shape bg-info bg-opacity-10 text-info rounded-3">
                            <i class="bi bi-truck fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Suppliers")" class="text-info text-decoration-none small fw-bold">
                            Quản lý NCC <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-start border-4 border-warning h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase text-muted fw-bold mb-1 small">Giá trị tồn kho</p>
                            <h4 class="fw-bold text-dark mb-0">@String.Format("{0:N0}", ViewBag.InventoryValue) ₫</h4>
                        </div>
                        <div class="icon-shape bg-warning bg-opacity-10 text-warning rounded-3">
                            <i class="bi bi-currency-dollar fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">Tổng giá trị ước tính</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary"><i class="bi bi-bar-chart-line me-1"></i> Thống kê Nhập hàng theo tháng</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area" style="height: 300px;">
                        <canvas id="importChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 fw-bold text-success"><i class="bi bi-pie-chart me-1"></i> Tỷ lệ Tồn kho theo Danh mục</h6>
                </div>
                <div class="card-body d-flex justify-content-center align-items-center">
                    <div style="width: 100%; max-width: 320px;">
                        <canvas id="categoryPieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom-0">
                    <h6 class="m-0 fw-bold text-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Cảnh báo Sắp hết hàng (SL < 10)
                    </h6>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-sm btn-outline-secondary">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Tên sản phẩm</th>
                                    <th>Danh mục</th>
                                    <th>Nhà cung cấp</th>
                                    <th class="text-center">Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (lowStock != null && lowStock.Any())
                                {
                                    foreach (var p in lowStock)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-dark">@p.ProductName</td>
                                            <td class="text-muted">@(p.Category?.CategoryName ?? "Không có")</td>
                                            <td class="text-muted">@(p.Supplier?.SupplierName ?? "Không có")</td>
                                            <td class="text-center">
                                                <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">
                                                    Còn @p.Quantity
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">
                                            <i class="bi bi-check-circle text-success fs-1 mb-2 d-block"></i>
                                            Tình trạng kho hàng ổn định!
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // --- 1. Bar Chart Config ---
        var months = [];
        var imports = [];

        @if (monthlyImport != null)
        {
            foreach (dynamic m in monthlyImport)
            {
                <text>
                    months.push("Thg @m.Month");
                    imports.push(@m.TotalImport);
                </text>
            }
        }

        const ctxImport = document.getElementById("importChart").getContext('2d');
        new Chart(ctxImport, {
            type: 'bar',
            data: {
                labels: months,
                datasets: [{
                    label: "Số lượng nhập",
                    data: imports,
                    backgroundColor: '#4e73df',
                    borderRadius: 4, // Bo góc cột
                    barPercentage: 0.6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: 'rgb(255, 255, 255)',
                        bodyColor: '#858796',
                        titleColor: '#6e707e',
                        borderColor: '#dddfeb',
                        borderWidth: 1,
                        padding: 10,
                        displayColors: false
                    }
                },
                scales: {
                    x: { grid: { display: false, drawBorder: false } },
                    y: { 
                        beginAtZero: true,
                        grid: { color: "rgb(234, 236, 244)", borderDash: [2], drawBorder: false }
                    }
                }
            }
        });

        // --- 2. Pie Chart Config ---
        const categoryLabels = [];
        const categoryData = [];

        @if (categoryStock != null)
        {
            foreach (dynamic item in categoryStock)
            {
                <text>
                    categoryLabels.push("@Html.Raw(item.CategoryName)");
                    categoryData.push(@item.TotalQty);
                </text>
            }
        }

        const ctxCategory = document.getElementById('categoryPieChart').getContext('2d');
        new Chart(ctxCategory, {
            type: 'doughnut', 
            data: {
                labels: categoryLabels,
                datasets: [{
                    data: categoryData,
                    backgroundColor: [
                        '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796'
                    ],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { padding: 20, usePointStyle: true } }
                },
                cutout: '70%', 
            }
        });
    </script>
}

<style>
    /* Custom CSS bổ sung */
    .stat-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s;
        border: none;
        box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15)!important;
    }
    .stat-card:hover {
        transform: translateY(-3px);
    }

    .icon-shape {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 0.5rem;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,.02);
    }
</style>