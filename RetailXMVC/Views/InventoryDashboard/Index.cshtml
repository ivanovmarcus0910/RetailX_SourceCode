@{
    ViewData["Title"] = "Warehouse Dashboard";

    var lowStock = ViewBag.LowStock as List<BusinessObject.Models.Product>;
    var monthlyImport = ViewBag.MonthlyImport as List<object>;
}

<section class="content-header">
    <h2>Warehouse Dashboard</h2>
</section>

<section class="content">

    <!-- Dashboard Summary -->
    <div class="row mb-3">
        <div class="col-md-3 col-sm-6">
            <div class="card border-light shadow-sm p-3 text-center">
                <h3>@ViewBag.TotalProducts</h3>
                <p>Total Products</p>
                <a href="@Url.Action("Index", "Products")" class="dashboard-btn mt-2">Manage Products</a>

            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card border-light shadow-sm p-3 text-center">
                <h3>@ViewBag.TotalCategories</h3>
                <p>Total Categories</p>
                <a href="@Url.Action("Index", "Categories")" class="dashboard-btn mt-2">Manage Categories</a>


            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card border-light shadow-sm p-3 text-center">
                <h3>@ViewBag.TotalSuppliers</h3>
                <p>Total Suppliers</p>
                <a href="@Url.Action("Index", "Suppliers")" class="dashboard-btn mt-2">Manage Suppliers</a>


            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card border-light shadow-sm p-3 text-center">
                <h3>@String.Format("{0:N0}", ViewBag.InventoryValue) ₫</h3>
                <p>Inventory Value</p>
                <a href="@Url.Action("ImportReport", "InventoryDashboard")" class="dashboard-btn mt-2">Report</a>

            </div>
        </div>
    </div>

    <div class="row">

        <!-- Monthly Import Chart -->
        <div class="col-lg-7 mb-3">
            <div class="card p-3">
                <h5 class="mb-3">Monthly Import</h5>
                <canvas id="importChart" height="180"></canvas>
            </div>
        </div>

        <!-- Low Stock -->
        <div class="col-lg-5 mb-3">
            <div class="card p-3">
                <h5 class="mb-3">Low Stock Alert</h5>
                <table class="table table-sm table-bordered mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Qty</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (lowStock != null && lowStock.Any())
                        {
                            foreach (var p in lowStock)
                            {
                                <tr>
                                    <td>@p.ProductName</td>
                                    <td class="text-danger font-weight-bold">@p.Quantity</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="2" class="text-center">No low-stock items</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var months = [];
        var imports = [];

        @if (monthlyImport != null)
        {
            foreach (dynamic m in monthlyImport)
            {
                <text>
                    months.push("Tháng @m.Month");
                    imports.push(@m.TotalImport);
                </text>
            }
        }

        new Chart(document.getElementById("importChart"), {
            type: 'bar',
            data: {
                labels: months,
                datasets: [{
                    label: "Imported Qty",
                    data: imports,
                    backgroundColor: '#4e73df'
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });
    </script>
    <style>
    /* Button chung cho dashboard */
    .dashboard-btn {
        background-color: #4e73df; /* màu xanh thống nhất */
        color: white;
        border-radius: 12px; /* bo tròn */
        padding: 5px 12px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease; /* hover mượt */
    }

    .dashboard-btn:hover {
        background-color: #2e59d9; /* đậm hơn khi hover */
        color: white;
        text-decoration: none;
        transform: translateY(-2px); /* nhích nhẹ khi hover */
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .dashboard-btn:active {
        transform: translateY(0);
        box-shadow: none;
    }
</style>
}
