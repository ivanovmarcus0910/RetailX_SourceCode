@model BusinessObject.Models.PurchaseOrder

@{
    ViewData["Title"] = "Create Purchase Order";
    Layout = "_InventoryLayout";
}

<div class="container-fluid p-0">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">🧾 Tạo Đơn nhập hàng</h2>
            <p class="text-muted mb-0">Lập phiếu nhập kho mới từ nhà cung cấp.</p>
        </div>
        <a asp-action="Index" class="btn btn-light border text-secondary fw-bold shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="text-primary fw-bold mb-0">
                        <i class="bi bi-file-earmark-plus me-2"></i> Thông tin đơn hàng
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small mb-4" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="SupplierId" class="form-label fw-semibold text-secondary small text-uppercase">
                                Nhà cung cấp <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted">
                                    <i class="bi bi-truck"></i>
                                </span>
                                <select asp-for="SupplierId" class="form-select border-start-0 ps-0" 
                                        asp-items="@(new SelectList(ViewBag.Suppliers, "SupplierId", "SupplierName"))">
                                    <option value="">-- Chọn Nhà cung cấp --</option>
                                </select>
                            </div>
                            <span asp-validation-for="SupplierId" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CreateDate" class="form-label fw-semibold text-secondary small text-uppercase">
                                Ngày tạo đơn <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted">
                                    <i class="bi bi-calendar-event"></i>
                                </span>
                                <input asp-for="CreateDate" class="form-control border-start-0 ps-0" type="date" />
                            </div>
                            <span asp-validation-for="CreateDate" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid pt-2">
                            <button type="submit" class="btn btn-create fw-bold shadow-sm py-2">
                                <i class="bi bi-check-lg me-2"></i> Tạo đơn hàng
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    /* Input Styles */
    .form-control:focus, .form-select:focus {
        box-shadow: none;
        border-color: #dee2e6;
        background-color: #fff !important;
    }
    .input-group-text {
        background-color: #f8f9fa;
    }

    /* Button Styles */
    .btn-create {
        background-color: #339AF0;
        color: white;
        border: none;
        border-radius: 8px;
        transition: all 0.2s;
    }
    .btn-create:hover {
        background-color: #2A4A99;
        color: white;
        box-shadow: 0 4px 6px rgba(51, 154, 240, 0.25);
    }
</style>