@model IEnumerable<BusinessObject.Models.PurchaseOrder>
@{
    Layout = "_InventoryLayout";
}
<h2 class="mb-4">Purchase Orders</h2>

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <a asp-action="Create" class="btn btn-create">+ Create PO</a>

    <form method="get" class="d-flex gap-2 flex-wrap">
         <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" style="width:160px;" />

        <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" style="width:160px;" />
        <input type="text" name="searchSupplier" value="@ViewBag.SearchSupplier" class="form-control" style="width:200px;" placeholder="Supplier name" />

        <select name="statusFilter" class="form-select" style="width:150px;" asp-items="ViewBag.StatusList"></select>

        <button type="submit" class="btn btn-search">Search</button>
    </form>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th scope="col">Supplier</th>
            <th scope="col">Date</th>
            <th scope="col">Status</th>
            <th scope="col" class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Supplier?.SupplierName</td>
                <td>@item.CreateDate.ToShortDateString()</td>
                <td>
                    @if(item.Status == 2)
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if(item.Status == 3)
                    {
                        <span class="badge bg-success">Confirmed</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Unknown</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.PurchaseOrderId" class="btn btn-info btn-sm me-1">Details</a>

                    @if (item.Status != 3)
                    {
                        <form asp-action="Delete" asp-route-id="@item.PurchaseOrderId" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this Purchase Order?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center text-muted">No purchase orders found</td>
        </tr>
    }
    </tbody>
</table>
<style>
    .btn-create, .btn-search, .btn-info, .btn-danger {
        border-radius: 8px;
        padding: 6px 14px;
        font-size: 0.875rem;
        transition: all 0.2s;
        border: none;
    }

    .btn-create {
        background-color: #339AF0; /* xanh dương đậm hơn */
        color: white;
    }
    .btn-create:hover {
        background-color: #2A4A99;
    }

    .btn-search {
        background-color: #339AF0; /* xanh dương đậm hơn */
        color: white;
    }
    .btn-search:hover {
        background-color: #1C7ED6;
    }

    .btn-info {
        background-color: #339AF0; /* xanh dương đậm hơn */
        color: white;
    }
    .btn-info:hover {
        background-color: #138496;
    }

    .btn-danger {
        background-color: #E03131; /* đỏ đậm hơn */
        color: white;
    }
    .btn-danger:hover {
        background-color: #C92A2A;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }
</style>
