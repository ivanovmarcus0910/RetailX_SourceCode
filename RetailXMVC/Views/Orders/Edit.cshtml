@model BusinessObject.Models.Order
@{
    Layout = "_SellerLayout";
}
<h2>Edit Order</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="OrderId" />

    <label>Customer</label>
    <input asp-for="CustomerId" class="form-control" />

    <label>Staff</label>
    <input asp-for="StaffId" class="form-control" />

    <h3>Order Details</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderDetails.Count; i++)
            {
                <tr>
                    <td>
                        @Model.OrderDetails.ElementAt(i).Product.ProductName
                        <input type="hidden"
                               name="OrderDetails[@i].ProductId"
                               value="@Model.OrderDetails.ElementAt(i).ProductId" />
                    </td>

                    <td>
                        <input type="number"
                               name="OrderDetails[@i].Quantity"
                               value="@Model.OrderDetails.ElementAt(i).Quantity"
                               min="0"
                               class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-primary">Save</button>
</form>
