@model BusinessObject.Models.Order
@{
    var products = ViewBag.Products as List<BusinessObject.Models.Product>;
    var existing = Model.OrderDetails.ToDictionary(d => d.ProductId, d => d.Quantity);
}

<form asp-action="Edit" method="post">
    <input type="hidden" name="OrderId" value="@Model.OrderId" />

    <div class="mb-3">
        <label>Customer</label>
        <input type="number" name="CustomerId" value="@Model.CustomerId" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Staff</label>
        <input type="number" name="StaffId" value="@Model.StaffId" class="form-control" />
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Chọn</th>
                <th>Sản phẩm</th>
                <th>Tồn kho</th>
                <th>Số lượng</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < products.Count; i++)
            {
                var p = products[i];
                int qty = existing.ContainsKey(p.ProductId) ? existing[p.ProductId] : 0;

                <tr>
                    <td>
                        <input type="hidden" name="selected[@i]" value="false" />

                        <input type="checkbox"
                               name="selected[@i]"
                               value="true"
                               @(qty > 0 ? "checked" : "") />

                    </td>

                    <td>@p.ProductName</td>
                    <td>@p.Quantity</td>

                    <td>
                        <input type="number" name="quantities[@i]" value="@qty" />
                        <input type="hidden" name="productIds[@i]" value="@p.ProductId" />

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-primary">Lưu</button>
</form>
