@model BusinessObject.Models.PurchaseOrderDetail
@{
    Layout = null;
    var products = ViewBag.Products as IEnumerable<BusinessObject.Models.Product>;
    var orderId = ViewBag.OrderId;
}

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold text-primary">
        <i class="bi bi-cart-plus me-2"></i> Thêm Sản phẩm
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="addProductForm" method="post" asp-action="Create" asp-controller="PurchaseOrderDetail">
    @Html.AntiForgeryToken()
    <input type="hidden" name="orderId" value="@orderId" />

    <div class="modal-body pt-4">
        
        <div class="mb-4">
            <label class="form-label fw-semibold text-secondary small text-uppercase">
                Chọn sản phẩm
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted">
                    <i class="bi bi-box-seam"></i>
                </span>
                <select name="productId" class="form-select border-start-0 ps-0">
                    @foreach (var p in products)
                    {
                        <option value="@p.ProductId">@p.ProductName</option>
                    }
                </select>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold text-secondary small text-uppercase">
                    Số lượng nhập
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted">
                        <i class="bi bi-layers"></i>
                    </span>
                    <input type="number" name="quantity" class="form-control border-start-0 ps-0" value="1" min="1" />
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold text-secondary small text-uppercase">
                    Đơn giá nhập
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted">
                        <i class="bi bi-currency-dollar"></i>
                    </span>
                    <input type="number" name="price" class="form-control border-start-0 ps-0" value="0" step="1000" min="0" />
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer border-top-0 pt-0 pb-4 px-4">
        <button type="button" class="btn btn-light text-secondary fw-bold" data-bs-dismiss="modal">
            Hủy bỏ
        </button>
        <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Thêm vào đơn
        </button>
    </div>
</form>

<style>
    /* Input Styles */
    .form-control:focus, .form-select:focus {
        box-shadow: none;
        border-color: #dee2e6;
        background-color: #fff !important;
    }
    .input-group-text {
        background-color: #f8f9fa;
    }
</style>