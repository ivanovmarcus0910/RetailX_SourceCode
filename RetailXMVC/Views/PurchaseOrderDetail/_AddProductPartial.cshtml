@model BusinessObject.Models.PurchaseOrderDetail
@{
    var products = ViewBag.Products as IEnumerable<BusinessObject.Models.Product>;
    var orderId = ViewBag.OrderId;
}

<div class="modal-header border-0">
    <h5 class="modal-title">Add Product</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="addProductForm" method="post" asp-action="Create" asp-controller="PurchaseOrderDetail">
    @Html.AntiForgeryToken()
    <input type="hidden" name="orderId" value="@orderId" />

    <div class="modal-body">
        <div class="mb-3">
            <label class="form-label">Product</label>
            <select name="productId" class="form-select">
                @foreach (var p in products)
                {
                    <option value="@p.ProductId">@p.ProductName</option>
                }
            </select>
        </div>

        <div class="row g-2">
            <div class="col">
                <label class="form-label">Quantity</label>
                <input type="number" name="quantity" class="form-control" value="1" min="1" />
            </div>
            <div class="col">
                <label class="form-label">Price</label>
                <input type="number" name="price" class="form-control" value="0" step="0.01" min="0" />
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>

<style>
/* Nút và form gọn, hiện đại */
.modal-body .form-label {
    font-weight: 500;
    font-size: 0.95rem;
}
.modal-footer .btn {
    min-width: 80px;
}
</style>
