@model BusinessObject.Models.PurchaseOrderDetail

<div class="modal-header border-0">
    <h5 class="modal-title text-danger">Confirm Delete</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <p>Are you sure you want to delete <strong>@Model.Product?.ProductName</strong> from this order?</p>
</div>

<form id="deleteForm" method="post" asp-action="Delete" asp-controller="PurchaseOrderDetail">
    @Html.AntiForgeryToken()
    <input type="hidden" name="detailId" value="@Model.PurchaseOrderDetailId" />
    <input type="hidden" name="orderId" value="@Model.PurchaseOrderId" />
    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
