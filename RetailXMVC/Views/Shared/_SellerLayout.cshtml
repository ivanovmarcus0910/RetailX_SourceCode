@*
    Seller Layout - RetailX
    Designed for Seller Dashboard
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seller Panel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/favicon.png" asp-append-version="true" />

    <style>
        :root {
            /* Định nghĩa màu sắc */
            --primary-color: #3b82f6; /* Blue (Màu nhấn chính) */
            --secondary-color: #000000; /* Đen tuyền hoàn toàn */
            --text-color: #374151; /* Dark Gray (Text color) */
            --light-gray: #e5e7eb; /* Light Gray (Border/Divider) */
            --background-color: #f9fafb; /* Lighter Background */
            /* 👇 THAY ĐỔI Ở ĐÂY: Định nghĩa độ rộng sidebar để dễ quản lý */
            --sidebar-width: 300px;
        }

        body {
            background-color: var(--background-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
        }

        /* Reset/Utilities */
        a {
            text-decoration: none;
            transition: color 0.2s, background-color 0.2s, border-color 0.2s;
        }

        /* =========================
                           1. Sidebar Nâng Cấp
                           ========================= */
        .sidebar {
            /* 👇 THAY ĐỔI: Sử dụng biến độ rộng mới */
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: var(--secondary-color);
            color: white;
            padding-top: 20px;
            /* 👇 THAY ĐỔI: Loại bỏ hoàn toàn box-shadow */
            box-shadow: none;
            /* Thêm border phải mỏng để phân cách nhẹ nhàng nếu muốn, hoặc bỏ đi cũng được */
            border-right: 1px solid #333;
        }

            .sidebar .brand {
                font-size: 24px;
                font-weight: 800;
                color: white;
                text-align: center;
                margin-bottom: 40px;
                padding: 0 20px;
                letter-spacing: 1px;
            }

            .sidebar a {
                color: #9ca3af;
                padding: 14px 25px;
                display: flex;
                align-items: center;
                font-size: 15px;
                font-weight: 500;
                border-left: 4px solid transparent;
                margin: 5px 0;
            }

                .sidebar a:hover {
                    background: #1a1a1a;
                    color: white;
                    border-left-color: var(--primary-color);
                }

                .sidebar a.active {
                    background: #262626;
                    color: white;
                    border-left-color: var(--primary-color);
                }

                .sidebar a i {
                    margin-right: 12px;
                    font-size: 18px;
                }

        /* =========================
                           2. Content & Header
                           ========================= */
        .main-content {
            /* 👇 THAY ĐỔI: Cập nhật margin-left theo độ rộng sidebar mới */
            margin-left: var(--sidebar-width);
            padding: 30px;
        }

        .topbar {
            background: white;
            padding: 15px 25px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }

            .topbar h4 {
                font-weight: 700;
                color: var(--text-color);
            }

            .topbar .user-info {
                font-weight: 600;
                color: var(--text-color);
                display: flex;
                align-items: center;
            }

                .topbar .user-info .logout-btn {
                    background-color: #ef4444;
                    border-color: #ef4444;
                    font-weight: 600;
                    transition: background-color 0.2s, border-color 0.2s;
                }

                    .topbar .user-info .logout-btn:hover {
                        background-color: #dc2626;
                        border-color: #dc2626;
                    }

    </style>
</head>

<body>

    <div class="sidebar">
        <div class="brand">RetailX Seller</div>

        <a asp-controller="Orders" asp-action="Create" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" ? "active" : "")">
            <i class="bi bi-plus-circle"></i> Tạo hóa đơn
        </a>

        <a asp-controller="Customer" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" ? "active" : "")">
            <i class="bi bi-people"></i> Danh sách khách hàng
        </a>

        <a asp-controller="Orders" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
            <i class="bi bi-file-earmark-text"></i> Danh sách hóa đơn
        </a>

        <a asp-controller="SellerDashboard" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "SellerDashboard" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
            <i class="bi bi-file-earmark-text"></i> Thống kê doanh số 
        </a>
    </div>

    <div class="main-content">

        <div class="topbar d-flex justify-content-between align-items-center">
            <h4 class="m-0">@ViewData["Title"]</h4>

            <div class="user-info">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    var fullName = User.FindFirst("FullName")?.Value ?? User.Identity.Name;
                    <span class="me-3 fw-bold">👤 @fullName</span>

                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger btn-sm logout-btn">
                        Đăng xuất
                    </a>
                }
            </div>
        </div>

        <div>
            @RenderBody()
        </div>

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_SignalRScripts" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>