@{
    ViewData["Title"] = "Đăng ký Tenant";
}

<h2 class="mb-4">Đăng ký cửa hàng (Tenant) mới</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<form asp-action="SignUpTenant" method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label class="form-label" for="companyName">Tên cửa hàng</label>
        <input id="companyName" name="companyName" class="form-control" placeholder="VD: retailxminimart" />
    </div>

    <button type="submit" class="btn btn-primary">
        Đăng ký Tenant
    </button>
</form>