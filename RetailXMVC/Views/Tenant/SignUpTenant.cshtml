@{
    ViewData["Title"] = "Sign Up";
}

<h2 class="mb-3">Tạo tài khoản mới</h2>

<form asp-action="SignUpAccount" asp-controller="Auth" method="post" class="card p-3" style="max-width:450px;">
    <div class="mb-3">
        <label for="fullname" class="form-label">Họ và tên</label>
        <input id="fullname" name="fullname" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input id="email" name="email" type="email" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Mật khẩu</label>
        <input id="password" name="password" type="password" class="form-control" />
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="text-danger mb-2">@ViewBag.ErrorMessage</div>
    }

    <button type="submit" class="btn btn-primary w-100">Đăng ký</button>

    <div class="mt-2">
        <a asp-action="Login" asp-controller="Auth">Đã có tài khoản? Đăng nhập</a>
    </div>
</form>
