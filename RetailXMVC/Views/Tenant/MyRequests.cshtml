@model List<BusinessObjectRetailX.Models.Request>

@{
    ViewData["Title"] = "Yêu cầu của tôi";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="fa fa-list-alt"></i> Danh sách yêu cầu gia nhập của tôi</h2>

    @if (TempData["Success"] != null) { <div class="alert alert-success">@TempData["Success"]</div> }
    @if (TempData["Warning"] != null) { <div class="alert alert-warning">@TempData["Warning"]</div> }

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Request ID</th>
                        <th>Công ty</th>
                        <th>Thông tin của bạn</th>
                        <th>Trạng thái</th>
                        <th>Ngày gửi</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var req in Model)
                        {
                            <tr>
                                <td>#@req.Id</td>
                                <td class="fw-bold text-primary">@req.Tenant?.CompanyName</td>
                                <td>
                                    <div>@req.User?.FullName</div>
                                    <small class="text-muted">@req.User?.Email</small>
                                </td>
                                <td>
                                    @if (req.User.FullName == "req.IsApproved") 
                                    {
                                        <span class="badge bg-success">Đã duyệt (Approved)</span>
                                    }
                                    else 
                                    {
                                        <span class="badge bg-warning text-dark">Đang chờ (Pending)</span>
                                    }
                                </td>
                                <td>
                                    @DateTime.Now.ToString("dd/MM/yyyy") 
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Bạn chưa gửi yêu cầu nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="ListCompany" class="btn btn-outline-primary">
            <i class="fa fa-arrow-left"></i> Quay lại danh sách công ty
        </a>
    </div>
</div>