@model BusinessObject.Models.Category
@{
    Layout = null;
}

<div class="modal-header border-0">
    <h5 class="modal-title">Create New Category</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="categoryForm" asp-action="Create" method="post" class="p-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control rounded" placeholder="Enter category name" />
        <span asp-validation-for="CategoryName" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Decription" class="form-label"></label>
        <textarea asp-for="Decription" class="form-control rounded" placeholder="Enter description" rows="3"></textarea>
        <span asp-validation-for="Decription" class="text-danger small"></span>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-outline-secondary rounded" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary rounded">Create</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    