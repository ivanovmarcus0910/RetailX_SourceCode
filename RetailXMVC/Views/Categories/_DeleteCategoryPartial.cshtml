@model BusinessObject.Models.Category
@{
    Layout = null;
}

<div class="modal-header border-0">
    <h5 class="modal-title">Xóa danh mục</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="categoryForm" asp-action="Delete" method="post" class="p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.CategoryId" />

    <p>Bạn có chắc muốn xóa : <strong>@Model.CategoryName</strong>?</p>

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-outline-secondary rounded" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary rounded">Xóa</button>
    </div>
</form>

