@model BusinessObject.Models.Category
@{
    Layout = null;
}

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold text-primary">
        <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa Danh mục
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="categoryForm" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CategoryId" />

    <div class="modal-body pt-4">
        <div class="mb-4">
            <label asp-for="CategoryName" class="form-label fw-semibold text-secondary small text-uppercase">
                Tên danh mục <span class="text-danger">*</span>
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted">
                    <i class="bi bi-tag"></i>
                </span>
                <input asp-for="CategoryName" class="form-control border-start-0 ps-0" placeholder="Nhập tên danh mục..." />
            </div>
            <span asp-validation-for="CategoryName" class="text-danger small mt-1 d-block"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Decription" class="form-label fw-semibold text-secondary small text-uppercase">
                Mô tả
            </label>
            <textarea asp-for="Decription" class="form-control bg-light" placeholder="Nhập mô tả chi tiết..." rows="4" style="resize: none;"></textarea>
            <span asp-validation-for="Decription" class="text-danger small mt-1 d-block"></span>
        </div>
    </div>

    <div class="modal-footer border-top-0 pt-0 pb-4 px-4">
        <button type="button" class="btn btn-light text-secondary fw-bold" data-bs-dismiss="modal">
            Hủy bỏ
        </button>
        <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm">
            <i class="bi bi-check-lg me-1"></i> Lưu thay đổi
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}