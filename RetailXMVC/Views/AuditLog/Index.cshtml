@model IEnumerable<BusinessObject.Models.Log>
@{
    ViewData["Title"] = "Audit Log";
    Layout = "~/Views/Shared/_OwnerLayout.cshtml";
}

<div class="bg-white p-4 rounded shadow-sm">
    <form method="get" asp-action="Index" class="row g-2 mb-4 align-items-end">
        <div class="col-md-3">
            <label class="small text-muted">From Date</label>
            <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
        </div>
        <div class="col-md-3">
            <label class="small text-muted">To Date</label>
            <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate" />
        </div>
        <div class="col-md-3">
            <label class="small text-muted">Level</label>
            <select name="logLevel" class="form-select">
                <option value="">All Levels</option>
                <option value="1" selected="@(ViewBag.LogLevel == 1)">Info</option>
                <option value="2" selected="@(ViewBag.LogLevel == 2)">Update</option>
                <option value="3" selected="@(ViewBag.LogLevel == 3)">Warning</option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-dark w-100">Filter Logs</button>
        </div>
    </form>

    <table class="table table-hover align-middle border-top">
        <thead class="table-light">
            <tr>
                <th>Time</th>
                <th>Actor</th>
                <th>Action Description</th>
                <th class="text-center">Level</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-muted small">@item.CreateDate?.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td class="fw-bold">@(item.Staff?.StaffName ?? "System")</td>
                    <td>@item.Decription</td>
                    <td class="text-center">
                        @if (item.LogLevel == 1) { <span class="badge bg-success">Info</span> }
                        else if (item.LogLevel == 2) { <span class="badge bg-warning text-dark">Update</span> }
                        else { <span class="badge bg-danger">Warning</span> }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>