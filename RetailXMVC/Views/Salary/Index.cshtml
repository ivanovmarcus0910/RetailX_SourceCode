@model IEnumerable<BusinessObject.Models.Salary>
@{
    // Đảm bảo bạn có liên kết đến Bootstrap và FontAwesome trong _Layout.cshtml
    ViewData["Title"] = "Quản Lý Lương";
}

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fas fa-money-check-alt me-2"></i> Bảng Lương Tháng @ViewBag.Month/@ViewBag.Year
        </h4>

        @* Nút Xử lý/Tạo bảng lương - Đặt ở góc phải *@
        <form asp-action="Process" method="post" class="m-0">
            <input type="hidden" name="month" value="@ViewBag.Month" />
            <input type="hidden" name="year" value="@ViewBag.Year" />
            <button type="submit" class="btn btn-warning btn-sm text-dark fw-bold">
                <i class="fas fa-calculator me-1"></i> Xử lý Bảng Lương
            </button>
        </form>
    </div>

    <div class="card-body p-3">
        @* --- KHU VỰC THÔNG BÁO --- *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-times-circle me-1"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @* --- HẾT KHU VỰC THÔNG BÁO --- *@

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center mt-3 mb-0">
                <i class="fas fa-info-circle me-1"></i> Không có dữ liệu lương cho tháng này. Vui lòng nhấn "Xử lý Bảng Lương" để tạo.
            </div>
        }
        else
        {
            @* Bảng chính đã được thiết kế lại *@
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle caption-top">
                    <caption class="text-secondary fw-bold">Tổng số bản ghi: @Model.Count()</caption>
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 5%;">ID</th>
                            <th>Nhân viên</th>
                            <th class="text-end">Lương cơ bản</th>
                            <th class="text-end">Thưởng</th>
                            <th class="text-end">Khấu trừ</th>
                            <th class="text-end">Tổng lương NET</th>
                            <th style="width: 15%;">Trạng thái</th>
                            <th style="width: 15%;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var baseSalary = item.Staff?.BaseSalary ?? 0;
                            var totalNet = item.Amount ?? 0;

                            @* Thêm class 'bg-success-subtle' (hoặc class tương đương của theme bạn) để làm nổi bật hàng đã thanh toán *@
                            <tr class="@(item.Status == 1 ? "table-success bg-opacity-10" : "")">
                                <td>@item.SalaryId</td>
                                <td>
                                    <i class="fas fa-user-circle me-1 text-primary"></i>
                                    <strong>@(item.Staff?.StaffName ?? "N/A")</strong>
                                </td>
                                <td class="text-end">@baseSalary.ToString("N0") VNĐ</td>
                                <td class="text-end text-success">@item.Bonus?.ToString("N0")</td>
                                <td class="text-end text-danger">@item.Deduction?.ToString("N0")</td>
                                <td class="text-end fw-bold text-primary">@totalNet.ToString("N0") VNĐ</td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge bg-success py-2">Đã TT (@item.DayPayment)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark py-2">Chờ TT</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == 0)
                                    {
                                        @* Nút Điều chỉnh *@
                                        <a asp-action="Adjust" asp-route-salaryId="@item.SalaryId" class="btn btn-sm btn-outline-info me-1" title="Điều chỉnh thưởng/khấu trừ">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        @* Nút Thanh toán *@
                                        <form asp-action="Pay" method="post" class="d-inline">
                                            <input type="hidden" name="salaryId" value="@item.SalaryId" />
                                            <input type="hidden" name="month" value="@item.Month" />
                                            <input type="hidden" name="year" value="@item.Year" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Xác nhận thanh toán"
                                                    onclick="return confirm('Xác nhận đã thanh toán lương cho @(item.Staff?.StaffName ?? "nhân viên này")?');">
                                                <i class="fas fa-hand-holding-usd"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Hoàn tất</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>