@model IEnumerable<BusinessObject.Models.Salary>
@{
    ViewData["Title"] = "Quản Lý Lương";
    int currentMonth = ViewBag.Month;
    int currentYear = ViewBag.Year;
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    int totalSalaries = ViewBag.TotalSalaries;
    var allSalaries = (List<BusinessObject.Models.Salary>)ViewBag.AllSalaries;

    // Tính tổng cho summary cards
    var totalBaseSalary = allSalaries?.Sum(s => s.Staff?.BaseSalary ?? 0) ?? 0;
    var totalBonus = allSalaries?.Sum(s => s.Bonus ?? 0) ?? 0;
    var totalDeduction = allSalaries?.Sum(s => s.Deduction ?? 0) ?? 0;
    var totalNetSalary = allSalaries?.Sum(s => s.Amount ?? 0) ?? 0;
    var totalPaid = allSalaries?.Count(s => s.Status == 1) ?? 0;
    var totalUnpaid = allSalaries?.Count(s => s.Status == 0) ?? 0;
}

<style>
    .summary-card {
        border-left: 4px solid;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .summary-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }

    /* Style cho buttons action - REDESIGNED */
    .action-btn {
        position: relative;
        transition: all 0.3s ease;
        border: 2px solid;
        width: 42px;
        height: 42px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        background: white;
        cursor: pointer;
    }

        .action-btn:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        }

        .action-btn i {
            font-size: 18px;
        }

    /* Button colors */
    .btn-view {
        border-color: #0dcaf0;
        color: #0dcaf0;
    }

        .btn-view:hover {
            background: #0dcaf0;
            color: white;
        }

    .btn-edit {
        border-color: #ffc107;
        color: #ffc107;
    }

        .btn-edit:hover {
            background: #ffc107;
            color: #000;
        }

    .btn-pay {
        border-color: #198754;
        color: #198754;
    }

        .btn-pay:hover {
            background: #198754;
            color: white;
        }

    /* Completed badge animation */
    .completed-badge {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }

    /* Tooltip custom */
    .action-tooltip {
        position: relative;
        display: inline-block;
    }

        .action-tooltip .tooltip-text {
            visibility: hidden;
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 6px 12px;
            border-radius: 6px;
            position: absolute;
            z-index: 1;
            bottom: 125%;
            left: 50%;
            transform: translateX(-50%);
            opacity: 0;
            transition: opacity 0.3s;
            white-space: nowrap;
            font-size: 12px;
        }

        .action-tooltip:hover .tooltip-text {
            visibility: visible;
            opacity: 1;
        }

        .action-tooltip .tooltip-text::after {
            content: "";
            position: absolute;
            top: 100%;
            left: 50%;
            margin-left: -5px;
            border-width: 5px;
            border-style: solid;
            border-color: #333 transparent transparent transparent;
        }
</style>

<!-- HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-money-check-alt text-primary me-2"></i>
            Quản Lý Lương
        </h2>
        <p class="text-muted mb-0">
            <i class="far fa-calendar-alt me-1"></i>
            Tháng <strong>@currentMonth/@currentYear</strong>
            <span class="badge bg-secondary ms-2">@totalSalaries nhân viên</span>
        </p>
    </div>
</div>

<!-- THÔNG BÁO -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- SUMMARY CARDS -->
@if (allSalaries != null && allSalaries.Any())
{
    <div class="row g-3 mb-4">
        <!-- Card 1: Tổng Lương Cơ Bản -->
        <div class="col-md-3">
            <div class="card summary-card border-0 shadow-sm h-100" style="border-left-color: #0d6efd !important;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1 small">Tổng Lương Cơ Bản</p>
                            <h4 class="mb-0 text-primary fw-bold">@totalBaseSalary.ToString("N0")</h4>
                            <small class="text-muted">VNĐ</small>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="fas fa-wallet fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2: Tổng Thưởng -->
        <div class="col-md-3">
            <div class="card summary-card border-0 shadow-sm h-100" style="border-left-color: #198754 !important;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1 small">Tổng Thưởng</p>
                            <h4 class="mb-0 text-success fw-bold">@totalBonus.ToString("N0")</h4>
                            <small class="text-muted">VNĐ</small>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="fas fa-gift fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3: Tổng Khấu Trừ -->
        <div class="col-md-3">
            <div class="card summary-card border-0 shadow-sm h-100" style="border-left-color: #dc3545 !important;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1 small">Tổng Khấu Trừ</p>
                            <h4 class="mb-0 text-danger fw-bold">@totalDeduction.ToString("N0")</h4>
                            <small class="text-muted">VNĐ</small>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded">
                            <i class="fas fa-minus-circle fa-2x text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 4: Tổng Lương NET -->
        <div class="col-md-3">
            <div class="card summary-card border-0 shadow-sm h-100" style="border-left-color: #0dcaf0 !important;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1 small">Tổng Lương NET</p>
                            <h4 class="mb-0 fw-bold" style="color: #0dcaf0">@totalNetSalary.ToString("N0")</h4>
                            <small class="text-muted">VNĐ</small>
                        </div>
                        <div class="p-3 rounded" style="background-color: rgba(13, 202, 240, 0.1)">
                            <i class="fas fa-money-bill-wave fa-2x" style="color: #0dcaf0"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Status Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm" style="border-left: 4px solid #198754;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Đã Thanh Toán</h6>
                            <h3 class="mb-0 text-success fw-bold">@totalPaid</h3>
                            <small class="text-muted">nhân viên</small>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm" style="border-left: 4px solid #ffc107;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Chờ Thanh Toán</h6>
                            <h3 class="mb-0 text-warning fw-bold">@totalUnpaid</h3>
                            <small class="text-muted">nhân viên</small>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- TOOLBAR: FILTER & ACTIONS -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" id="filterForm">
            <input type="hidden" name="page" id="pageInput" value="1" />
            <div class="row g-3 align-items-end">
                <!-- Month Filter -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold">
                        <i class="far fa-calendar me-1"></i> Tháng
                    </label>
                    <select name="month" id="monthSelect" class="form-select">
                        @for (int m = 1; m <= 12; m++)
                        {
                            <option value="@m" selected="@(m == currentMonth)">Tháng @m</option>
                        }
                    </select>
                </div>

                <!-- Year Filter -->
                <div class="col-md-3">
                    <label class="form-label fw-semibold">
                        <i class="far fa-calendar-alt me-1"></i> Năm
                    </label>
                    <select name="year" id="yearSelect" class="form-select">
                        @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                        {
                            <option value="@y" selected="@(y == currentYear)">Năm @y</option>
                        }
                    </select>
                </div>

                <!-- Filter Button -->
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-1"></i> Lọc
                    </button>
                </div>

                <!-- Process Salary Button -->
                <div class="col-md-3">
                    <button type="button" class="btn btn-warning w-100" onclick="processSalary()">
                        <i class="fas fa-calculator me-1"></i> Xử Lý Bảng Lương
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- SALARY TABLE -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">
                <i class="fas fa-list me-2"></i>
                Bảng Lương
                @if (totalSalaries > 0)
                {
                    <span class="badge bg-primary">@totalSalaries</span>
                }
            </h5>
            @if (totalSalaries > 0)
            {
                <span class="text-muted small">
                    Trang @currentPage / @totalPages
                </span>
            }
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                <p class="text-muted mb-0">
                    Không có dữ liệu lương cho tháng <strong>@currentMonth/@currentYear</strong>
                </p>
                <button type="button" class="btn btn-warning mt-3" onclick="processSalary()">
                    <i class="fas fa-calculator me-1"></i> Xử Lý Bảng Lương Ngay
                </button>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4" style="width: 80px;">ID</th>
                            <th style="width: 200px;">Nhân Viên</th>
                            <th class="text-end" style="width: 140px;">Lương Cơ Bản</th>
                            <th class="text-end" style="width: 120px;">Thưởng</th>
                            <th class="text-end" style="width: 120px;">Khấu Trừ</th>
                            <th class="text-end" style="width: 150px;">Lương NET</th>
                            <th class="text-center" style="width: 150px;">Trạng Thái</th>
                            <th class="pe-4 text-center" style="width: 180px;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var baseSalary = item.Staff?.BaseSalary ?? 0;
                            var totalNet = item.Amount ?? 0;

                            <tr class="@(item.Status == 1 ? "table-success bg-opacity-10" : "")">
                                <td class="ps-4">
                                    <span class="badge bg-secondary">#@item.SalaryId</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                            <i class="fas fa-user text-primary"></i>
                                        </div>
                                        <strong>@(item.Staff?.StaffName ?? "N/A")</strong>
                                    </div>
                                </td>
                                <td class="text-end">
                                    <span class="text-muted">@baseSalary.ToString("N0")</span>
                                    <small class="text-muted d-block">VNĐ</small>
                                </td>
                                <td class="text-end">
                                    <span class="text-success fw-semibold">
                                        <i class="fas fa-plus-circle fa-xs me-1"></i>@(item.Bonus?.ToString("N0") ?? "0")
                                    </span>
                                </td>
                                <td class="text-end">
                                    <span class="text-danger fw-semibold">
                                        <i class="fas fa-minus-circle fa-xs me-1"></i>@(item.Deduction?.ToString("N0") ?? "0")
                                    </span>
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold text-primary fs-6">@totalNet.ToString("N0")</span>
                                    <small class="text-muted d-block">VNĐ</small>
                                </td>
                                <td class="text-center">
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i> Đã TT
                                            <small class="d-block mt-1">(@item.DayPayment/@currentMonth)</small>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            <i class="fas fa-hourglass-half me-1"></i> Chờ TT
                                        </span>
                                    }
                                </td>
                                <td class="pe-4 text-center">
                                    @if (item.Status == 0)
                                    {
                                        <div class="d-flex justify-content-center gap-2">
                                            <!-- 👁️ XEM CHI TIẾT -->
                                            <div class="action-tooltip">
                                                <a asp-action="Details"
                                                   asp-route-salaryId="@item.SalaryId"
                                                   class="action-btn btn-view">
                                                    <i class="fas fa-file-invoice-dollar"></i>
                                                </a>
                                                <span class="tooltip-text">Xem Phiếu Lương</span>
                                            </div>

                                            <!-- ✏️ ĐIỀU CHỈNH THƯỞNG/PHẠT -->
                                            <div class="action-tooltip">
                                                <a asp-action="Adjust"
                                                   asp-route-salaryId="@item.SalaryId"
                                                   class="action-btn btn-edit">
                                                    <i class="fas fa-sliders-h"></i>
                                                </a>
                                                <span class="tooltip-text">Điều Chỉnh Thưởng/Phạt</span>
                                            </div>

                                            <!-- 💰 THANH TOÁN -->
                                            <div class="action-tooltip">
                                                <form asp-action="Pay" method="post" class="d-inline">
                                                    <input type="hidden" name="salaryId" value="@item.SalaryId" />
                                                    <input type="hidden" name="month" value="@currentMonth" />
                                                    <input type="hidden" name="year" value="@currentYear" />
                                                    <button type="submit"
                                                            class="action-btn btn-pay"
                                                            onclick="return confirm('💰 XÁC NHẬN THANH TOÁN LƯƠNG\n\n👤 Nhân viên: @item.Staff?.StaffName\n💵 Số tiền: @totalNet.ToString("N0") VNĐ\n📅 Tháng: @currentMonth/@currentYear\n\n✅ Bạn có chắc chắn muốn thanh toán?')">
                                                        <i class="fas fa-hand-holding-usd"></i>
                                                    </button>
                                                </form>
                                                <span class="tooltip-text">Thanh Toán Lương</span>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex flex-column align-items-center">
                                            <i class="fas fa-badge-check text-success fa-2x mb-1 completed-badge"></i>
                                            <span class="text-success small fw-semibold">✅ Đã Thanh Toán</span>
                                            <small class="text-muted">Ngày @item.DayPayment/@currentMonth/@currentYear</small>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- PAGINATION -->
            @if (totalPages > 1)
            {
                <div class="card-footer bg-white border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            Hiển thị <strong>@((currentPage - 1) * 10 + 1)</strong> - <strong>@Math.Min(currentPage * 10, totalSalaries)</strong>
                            trong tổng số <strong>@totalSalaries</strong> nhân viên
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                <!-- First Page -->
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { month = currentMonth, year = currentYear, page = 1 })">
                                        <i class="fas fa-angles-left"></i>
                                    </a>
                                </li>

                                <!-- Previous Page -->
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { month = currentMonth, year = currentYear, page = currentPage - 1 })">
                                        <i class="fas fa-angle-left"></i>
                                    </a>
                                </li>

                                @{
                                    int startPage = Math.Max(1, currentPage - 2);
                                    int endPage = Math.Min(totalPages, currentPage + 2);
                                }

                                @if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { month = currentMonth, year = currentYear, page = 1 })">1</a>
                                    </li>
                                    @if (startPage > 2)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                }

                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { month = currentMonth, year = currentYear, page = i })">@i</a>
                                    </li>
                                }

                                @if (endPage < totalPages)
                                {
                                    @if (endPage < totalPages - 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { month = currentMonth, year = currentYear, page = totalPages })">@totalPages</a>
                                    </li>
                                }

                                <!-- Next Page -->
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { month = currentMonth, year = currentYear, page = currentPage + 1 })">
                                        <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>

                                <!-- Last Page -->
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { month = currentMonth, year = currentYear, page = totalPages })">
                                        <i class="fas fa-angles-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- JAVASCRIPT -->
<script>
    function processSalary() {
        const month = document.getElementById('monthSelect').value;
        const year = document.getElementById('yearSelect').value;

        if (confirm(`🧮 XỬ LÝ BẢNG LƯƠNG\n\n📅 Tháng: ${month}/${year}\n\n⚡ Hệ thống sẽ tính toán lương cho tất cả nhân viên.\n\n✅ Bạn có chắc chắn muốn tiếp tục?`)) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("Process", "Salary")';

            // Add antiforgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token.value;
                form.appendChild(tokenInput);
            }

            const monthInput = document.createElement('input');
            monthInput.type = 'hidden';
            monthInput.name = 'month';
            monthInput.value = month;

            const yearInput = document.createElement('input');
            yearInput.type = 'hidden';
            yearInput.name = 'year';
            yearInput.value = year;

            form.appendChild(monthInput);
            form.appendChild(yearInput);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>

@* Add antiforgery token for AJAX *@
<input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()