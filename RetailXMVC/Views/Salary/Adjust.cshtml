@{
    Layout = "_FinanceLayout";
}
@model BusinessObject.Models.Salary
@{
    ViewData["Title"] = "Điều chỉnh Lương";
    var staffName = Model.Staff?.StaffName ?? "Nhân viên không rõ";
    var baseSalary = Model.Staff?.BaseSalary ?? 0;
    var currentNet = Model.Amount ?? 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<style>
    .adjust-header {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        color: white;
        border-radius: 12px 12px 0 0;
    }

    .info-card {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 0.75rem;
        border-left: 4px solid #0d6efd;
        transition: transform 0.2s;
    }

        .info-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .input-group-custom {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1rem;
        z-index: 10;
    }

    .input-with-icon {
        padding-left: 36px;
        font-size: 0.95rem;
    }

    .btn-save {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        border: none;
        color: white;
        transition: all 0.3s;
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #0a58ca, #084298);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.4);
        }

    .btn-cancel {
        background: #6c757d;
        border: none;
        color: white;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }
</style>

<div class="card shadow-sm border-0 mt-3">
    <!-- HEADER -->
    <div class="card-header adjust-header border-0 py-2 px-3">
        <h5 class="mb-0 fw-bold" style="font-size: 1rem;">
            <i class="fas fa-edit me-2"></i> Điều chỉnh Lương cho @staffName
        </h5>
        <small class="opacity-75" style="font-size: 0.8rem;">
            <i class="far fa-calendar me-1"></i> Tháng @Model.Month/@Model.Year
        </small>
    </div>

    <div class="card-body p-3">
        <!-- INFO CARDS -->
        <div class="row g-2 mb-3">
            <div class="col-md-4">
                <div class="info-card" style="border-left-color: #6c757d;">
                    <p class="mb-0 text-muted" style="font-size: 0.75rem;">
                        <i class="fas fa-id-badge me-1"></i> Mã nhân viên
                    </p>
                    <h6 class="fw-bold mb-0" style="font-size: 0.95rem;">#@Model.StaffId</h6>
                </div>
            </div>
            <div class="col-md-4">
                <div class="info-card" style="border-left-color: #198754;">
                    <p class="mb-0 text-muted" style="font-size: 0.75rem;">
                        <i class="fas fa-wallet me-1"></i> Lương cơ bản
                    </p>
                    <h6 class="fw-bold mb-0 text-success" style="font-size: 0.95rem;">@baseSalary.ToString("N0") VNĐ</h6>
                </div>
            </div>
            <div class="col-md-4">
                <div class="info-card" style="border-left-color: #0d6efd;">
                    <p class="mb-0 text-muted" style="font-size: 0.75rem;">
                        <i class="fas fa-money-bill-wave me-1"></i> Tổng lương hiện tại
                    </p>
                    <h6 class="fw-bold mb-0 text-primary" style="font-size: 0.95rem;">@currentNet.ToString("N0") VNĐ</h6>
                </div>
            </div>
        </div>

        <hr class="my-3" />

        <!-- FORM -->
        <form asp-action="Adjust" method="post">
            <input type="hidden" asp-for="SalaryId" />
            <input type="hidden" asp-for="StaffId" />
            <input type="hidden" asp-for="Month" />
            <input type="hidden" asp-for="Year" />

            <div class="row g-3">
                <!-- THƯỞNG -->
                <div class="col-md-6">
                    <label class="form-label fw-bold mb-1" style="font-size: 0.85rem;">
                        <i class="fas fa-gift text-success me-1"></i> Thưởng (Bonus)
                    </label>
                    <div class="input-group-custom">
                        <i class="fas fa-plus-circle input-icon text-success"></i>
                        <input type="number"
                               name="bonus"
                               value="@(Model.Bonus ?? 0)"
                               class="form-control input-with-icon"
                               step="1000"
                               min="0"
                               required
                               placeholder="0"
                               style="border: 2px solid #198754; border-radius: 8px; height: 42px;" />
                    </div>
                    <small class="form-text text-muted d-block mt-1" style="font-size: 0.75rem;">
                        <i class="fas fa-info-circle me-1"></i> Số tiền thưởng thêm vào lương
                    </small>
                </div>

                <!-- KHẤU TRỪ -->
                <div class="col-md-6">
                    <label class="form-label fw-bold mb-1" style="font-size: 0.85rem;">
                        <i class="fas fa-hand-holding-usd text-danger me-1"></i> Khấu trừ (Deduction)
                    </label>
                    <div class="input-group-custom">
                        <i class="fas fa-minus-circle input-icon text-danger"></i>
                        <input type="number"
                               name="deduction"
                               value="@(Model.Deduction ?? 0)"
                               class="form-control input-with-icon"
                               step="1000"
                               min="0"
                               required
                               placeholder="0"
                               style="border: 2px solid #dc3545; border-radius: 8px; height: 42px;" />
                    </div>
                    <small class="form-text text-muted d-block mt-1" style="font-size: 0.75rem;">
                        <i class="fas fa-info-circle me-1"></i> Số tiền bị trừ khỏi lương
                    </small>
                </div>
            </div>

            <!-- PREVIEW CALCULATION -->
            <div class="alert alert-info mt-3 py-2 px-3 d-flex align-items-center" style="background: rgba(13, 110, 253, 0.1); border-left: 4px solid #0d6efd; font-size: 0.85rem;">
                <i class="fas fa-calculator fa-lg me-2 text-primary"></i>
                <div>
                    <strong>Công thức tính:</strong>
                    <span class="text-muted d-block">Lương NET = Lương cơ bản + Thưởng - Khấu trừ</span>
                    <span class="text-muted">= @baseSalary.ToString("N0") + <span id="bonusPreview">@((Model.Bonus ?? 0).ToString("N0"))</span> - <span id="deductionPreview">@((Model.Deduction ?? 0).ToString("N0"))</span></span>
                </div>
            </div>

            <!-- BUTTONS -->
            <div class="d-flex justify-content-end gap-2 mt-3">
                <a asp-action="Index"
                   asp-route-month="@Model.Month"
                   asp-route-year="@Model.Year"
                   class="btn btn-cancel px-3 py-2" style="font-size: 0.9rem;">
                    <i class="fas fa-times me-1"></i> Hủy
                </a>
                <button type="submit" class="btn btn-save px-3 py-2" style="font-size: 0.9rem;">
                    <i class="fas fa-save me-1"></i> Lưu & Tính Lại Lương
                </button>
            </div>
        </form>
    </div>

    <!-- FOOTER INFO -->
    <div class="card-footer bg-light text-muted py-2 px-3 d-flex justify-content-between align-items-center" style="font-size: 0.75rem;">
        <div>
            <i class="fas fa-user-shield me-1"></i> Người điều chỉnh: <strong>@User.Identity.Name</strong>
        </div>
        <div>
            <i class="far fa-clock me-1"></i> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const baseSalary = @baseSalary;
        const bonusInput = document.querySelector('input[name="bonus"]');
        const deductionInput = document.querySelector('input[name="deduction"]');
        const bonusPreview = document.getElementById('bonusPreview');
        const deductionPreview = document.getElementById('deductionPreview');

        function updatePreview() {
            const bonus = parseFloat(bonusInput.value) || 0;
            const deduction = parseFloat(deductionInput.value) || 0;

            bonusPreview.textContent = bonus.toLocaleString('vi-VN');
            deductionPreview.textContent = deduction.toLocaleString('vi-VN');
        }

        bonusInput.addEventListener('input', updatePreview);
        deductionInput.addEventListener('input', updatePreview);
    </script>
}