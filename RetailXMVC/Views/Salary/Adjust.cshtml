@{
    Layout = "_FinanceLayout";
}
@model BusinessObject.Models.Salary
@{
    // Đặt tiêu đề và kiểm tra sự tồn tại của Staff object
    ViewData["Title"] = "Điều chỉnh Lương";
    var staffName = Model.Staff?.StaffName ?? "Nhân viên không rõ";
    var baseSalary = Model.Staff?.BaseSalary ?? 0;
    var currentNet = Model.Amount ?? 0;
}

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">
            <i class="fas fa-edit me-2"></i> Điều chỉnh Lương cho @staffName
        </h4>
    </div>

    <div class="card-body">

        <div class="row mb-4">
            <div class="col-md-4">
                <p class="mb-0 text-muted">Mã nhân viên (ID):</p>
                <h5 class="fw-bold">@Model.StaffId</h5>
            </div>
            <div class="col-md-4">
                <p class="mb-0 text-muted">Lương cơ bản:</p>
                <h5 class="fw-bold text-success">@baseSalary.ToString("N0") VNĐ</h5>
            </div>
            <div class="col-md-4">
                <p class="mb-0 text-muted">Tổng lương đã tính:</p>
                <h5 class="fw-bold text-primary">@currentNet.ToString("N0") VNĐ</h5>
            </div>
        </div>

        <hr class="my-4" />

        <form asp-action="Adjust" method="post">
            @* --- Dữ liệu Ẩn cần thiết cho POST Action --- *@
            <input type="hidden" asp-for="SalaryId" />
            <input type="hidden" asp-for="StaffId" />
            <input type="hidden" asp-for="Month" />
            <input type="hidden" asp-for="Year" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="bonus" class="form-label fw-bold">
                        <i class="fas fa-plus-circle text-success me-1"></i> Thưởng (Bonus):
                    </label>
                    @* Tên input phải khớp với tham số trong Controller Action *@
                    <input type="number" name="bonus" value="@(Model.Bonus ?? 0)" class="form-control form-control-lg" step="1000" min="0" required />
                    <small class="form-text text-muted">Nhập số tiền thưởng thêm vào lương (VND).</small>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="deduction" class="form-label fw-bold">
                        <i class="fas fa-minus-circle text-danger me-1"></i> Khấu trừ (Deduction):
                    </label>
                    @* Tên input phải khớp với tham số trong Controller Action *@
                    <input type="number" name="deduction" value="@(Model.Deduction ?? 0)" class="form-control form-control-lg" step="1000" min="0" required />
                    <small class="form-text text-muted">Nhập số tiền bị trừ khỏi lương (VND).</small>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" asp-route-month="@Model.Month" asp-route-year="@Model.Year" class="btn btn-secondary me-2">
                    <i class="fas fa-times me-1"></i> Hủy
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Lưu & Tính Lại Lương
                </button>
            </div>
        </form>
    </div>
</div>