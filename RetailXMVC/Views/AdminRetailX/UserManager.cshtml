@using BusinessObjectRetailX.Models
@model IEnumerable<User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container my-4">
    <h2 class="fw-bold mb-3">Manage Users</h2>

    <!-- Bộ lọc & Search -->
    <form method="get" class="card shadow-sm border-0 rounded-4 mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm (Tên / Email / Phone)</label>
                    <input type="text" name="search" value="@Context.Request.Query["search"]"
                           class="form-control" placeholder="Nhập từ khóa...">
                </div>

                <div class="col-md-3">
                    <label class="form-label">Role</label>
                    <select name="roleFilter" class="form-select">
                        <option value="All">Tất cả</option>
                        <option value="Admin" selected="@(Context.Request.Query["roleFilter"] == "Admin")">Admin</option>
                        <option value="Owner" selected="@(Context.Request.Query["roleFilter"] == "Owner")">Owner</option>
                        <option value="User" selected="@(Context.Request.Query["roleFilter"] == "User")">User</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="activeFilter" class="form-select">
                        <option value="">Tất cả</option>
                        <option value="true" selected="@(Context.Request.Query["activeFilter"] == "true")">Active</option>
                        <option value="false" selected="@(Context.Request.Query["activeFilter"] == "false")">Inactive</option>
                    </select>
                </div>

                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel me-1"></i>Lọc
                    </button>
                </div>
            </div>
        </div>
    </form>

    <!-- Bảng user -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="card-title mb-0">Danh sách User</h5>
                <span class="text-muted small">
                    Tổng: @Model.Count() user
                </span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle table-bordered mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Tenant</th>
                            <th>Role</th>
                            <th>Active</th>
                            <th>Ngày tạo</th>
                            <th>StaffId</th>
                            <th style="width:150px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-center text-muted py-4">
                                    Không có user nào.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var u in Model)
                            {
                                <tr>
                                    <td>@u.Id</td>
                                    <td>@u.FullName</td>
                                    <td>@u.Email</td>
                                    <td>@(u.Phone ?? "-")</td>
                                    <td>
                                        <div class="fw-semibold">@(u.Tenant?.CompanyName ?? "NULL")</div>
                                        <div class="text-muted small">@(u.Tenant?.DbName ?? "NULL")</div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@u.GlobalRole</span>
                                    </td>
                                    <td>
                                        @if (u.IsActive == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@(u.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                    <td>@(u.StaffId?.ToString() ?? "-")</td>
                                    <td>
                                        <div class="d-flex gap-1">
                                            <form asp-action="ToggleUserActive"
                                                  asp-controller="AdminRetailX"
                                                  method="post" class="form-toggle-user">
                                                <input type="hidden" name="id" value="@u.Id" />
                                                <button type="button"
                                                        class="btn btn-sm @(u.IsActive == true ? "btn-warning" : "btn-success") btn-toggle-user"
                                                        data-username="@u.FullName"
                                                        data-active="@(u.IsActive?.ToString().ToLower() ?? "false")">
                                                    @(u.IsActive == true ? "Khóa" : "Mở khóa")
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.btn-toggle-user').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();

                    const form = this.closest('form');
                    const userName = this.getAttribute('data-username') || 'user này';
                    const isActive = this.getAttribute('data-active') === 'true';

                    const actionText = isActive ? 'KHÓA' : 'MỞ KHÓA';
                    const confirmText = isActive ? 'Có, KHÓA user!' : 'Có, MỞ KHÓA user!';

                    Swal.fire({
                        title: `Bạn có chắc muốn ${actionText} "${userName}"?`,
                        text: "Trạng thái đăng nhập của user sẽ thay đổi.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: confirmText,
                        cancelButtonText: 'Hủy',
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
}
