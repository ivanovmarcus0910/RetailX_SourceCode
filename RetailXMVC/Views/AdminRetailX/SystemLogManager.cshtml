@using BusinessObjectRetailX.Models
@model List<SystemLog>

@{
    ViewData["Title"] = "Manage System Logs";
}

<div class="container my-4">
    <h2 class="fw-bold mb-3">System Logs</h2>

    <!-- Bộ lọc -->
    <form method="get" class="card shadow-sm border-0 rounded-4 mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-md-6">
                    <label class="form-label">Tìm kiếm (Action / Details / User)</label>
                    <input type="text"
                           name="search"
                           value="@Context.Request.Query["search"]"
                           class="form-control"
                           placeholder="Nhập từ khóa...">
                </div>

                <div class="col-md-3">
                    <label class="form-label">UserId</label>
                    <input type="number"
                           name="userId"
                           value="@Context.Request.Query["userId"]"
                           class="form-control"
                           placeholder="Lọc theo UserId">
                </div>

                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel me-1"></i> Lọc
                    </button>
                </div>
            </div>
        </div>
    </form>

    <!-- Bảng log (read-only) -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="card-title mb-0">Danh sách System Logs</h5>
                <span class="text-muted small">
                    Tổng: @Model.Count() log
                </span>
            </div>

            <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                <table class="table table-hover align-middle table-bordered mb-0 table-sm">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th style="width:60px;">ID</th>
                            <th style="width:170px;">Thời gian</th>
                            <th style="width:90px;">UserId</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    Chưa có log nào.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.Id</td>
                                    <td>@(log.CreatedDate?.ToString("dd/MM/yyyy HH:mm:ss") ?? "-")</td>
                                    <td>@(log.UserId?.ToString() ?? "-")</td>
                                    <td>
                                        @if (log.User != null)
                                        {
                                            <div class="fw-semibold">@log.User.Email</div>
                                            <div class="text-muted small">@log.User.FullName</div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            @(string.IsNullOrEmpty(log.Action) ? "N/A" : log.Action)
                                        </span>
                                    </td>
                                    <td style="max-width: 400px;">
                                        @if (!string.IsNullOrEmpty(log.Details))
                                        {
                                            <span>@log.Details</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No details</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <p class="mt-2 text-muted small mb-0">
                * Trang này chỉ dùng để <strong>xem SystemLog</strong>, không thể chỉnh sửa hoặc xoá.
            </p>
        </div>
    </div>
</div>
