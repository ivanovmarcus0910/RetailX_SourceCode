@using BusinessObjectRetailX.Models
@model List<UserLoginHistory>

@{
    ViewData["Title"] = "User Login History";
}

<div class="container my-4">
    <h2 class="fw-bold mb-3">User Login History</h2>

    <!-- Filter -->
    <form method="get" class="card shadow-sm border-0 rounded-4 mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-md-5">
                    <label class="form-label">Tìm kiếm (Email / Tên / IP / Device)</label>
                    <input type="text"
                           name="search"
                           value="@Context.Request.Query["search"]"
                           class="form-control"
                           placeholder="Nhập từ khóa...">
                </div>

                <div class="col-md-2">
                    <label class="form-label">UserId</label>
                    <input type="number"
                           name="userId"
                           value="@Context.Request.Query["userId"]"
                           class="form-control"
                           placeholder="UserId">
                </div>

                <div class="col-md-2">
                    <label class="form-label">TenantId</label>
                    <input type="number"
                           name="tenantId"
                           value="@Context.Request.Query["tenantId"]"
                           class="form-control"
                           placeholder="TenantId">
                </div>

                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel me-1"></i> Lọc
                    </button>
                </div>
            </div>
        </div>
    </form>

    <!-- Bảng history (read-only) -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="card-title mb-0">Danh sách lịch sử đăng nhập</h5>
                <span class="text-muted small">
                    Tổng: @Model.Count() lần đăng nhập
                </span>
            </div>

            <div class="table-responsive" style="max-height: 600px; overflow-y:auto;">
                <table class="table table-hover align-middle table-bordered table-sm mb-0">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th style="width:60px;">ID</th>
                            <th style="width:170px;">Thời gian</th>
                            <th style="width:80px;">UserId</th>
                            <th style="width:80px;">TenantId</th>
                            <th>User</th>
                            <th>IP</th>
                            <th>Device</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    Chưa có lịch sử đăng nhập nào.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var h in Model)
                            {
                                <tr>
                                    <td>@h.Id</td>
                                    <td>@(h.LoginTime?.ToString("dd/MM/yyyy HH:mm:ss") ?? "-")</td>
                                    <td>@(h.UserId.ToString() ?? "-")</td>
                                    <td>@(h.TenantId?.ToString() ?? "-")</td>
                                    <td>
                                        @if (h.User != null)
                                        {
                                            <div class="fw-semibold">@h.User.Email</div>
                                            <div class="text-muted small">@h.User.FullName</div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@(h.IpAddress ?? "-")</td>
                                    <td style="max-width: 280px;">
                                        <span class="small text-muted">
                                            @(string.IsNullOrEmpty(h.Device) ? "-" : h.Device)
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <p class="mt-2 text-muted small mb-0">
                * Trang này <strong>chỉ xem</strong> lịch sử đăng nhập, không cho chỉnh sửa hoặc xoá.
            </p>
        </div>
    </div>
</div>
