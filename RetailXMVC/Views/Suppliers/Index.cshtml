@model IEnumerable<BusinessObject.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
    Layout = "_InventoryLayout";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Quản lý Nhà cung cấp</h2>
            <p class="text-muted mb-0">Danh sách đối tác và thông tin liên hệ.</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">

            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
                <form method="get" class="d-flex gap-2 position-relative">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" name="searchString" value="@ViewBag.SearchString" 
                               class="form-control border-start-0 ps-0" 
                               style="width: 250px; background-color: #f8f9fa;" 
                               placeholder="Tìm kiếm nhà cung cấp..." />
                    </div>
                    <button class="btn btn-search fw-bold">Tìm kiếm</button>
                </form>

                <button class="btn btn-create fw-bold shadow-sm" id="btnCreateSupplier">
                    <i class="bi bi-plus-lg me-1"></i> Thêm Nhà cung cấp
                </button>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="py-3 ps-3">Tên nhà cung cấp</th>
                            <th class="py-3">Số điện thoại</th>
                            <th class="py-3">Email</th>
                            <th class="py-3">Địa chỉ</th>
                            <th class="py-3 text-end pe-3">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3 fw-semibold text-dark">@item.SupplierName</td>
                                    <td>@item.Phone</td>
                                    <td class="text-muted">@item.Email</td>
                                    <td class="text-muted" style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        @item.Address
                                    </td>
                                    <td class="text-end pe-3">
                                        <a href="javascript:void(0)" class="btn btn-warning btn-sm me-1 btn-action btn-edit-supplier"
                                           data-id="@item.SupplierId" title="Chỉnh sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a href="javascript:void(0)" class="btn btn-danger btn-sm btn-action btn-delete-supplier"
                                           data-id="@item.SupplierId" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-truck fs-1 d-block mb-2"></i>
                                        <span>Không tìm thấy nhà cung cấp nào.</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="supplierModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="supplierModalContent"></div>
    </div>
</div>

@section Scripts {
    <script>
        // Load Create
        $(document).on("click", "#btnCreateSupplier", function () {
            $.get('@Url.Action("Create", "Suppliers")', function (data) {
                $("#supplierModalContent").html(data);
                $("#supplierModal").modal("show");
            });
        });

        // Load Edit
        $(document).on("click", ".btn-edit-supplier", function () {
            var id = $(this).data("id");
            $.get('@Url.Action("Edit", "Suppliers")', { id: id }, function (data) {
                $("#supplierModalContent").html(data);
                $("#supplierModal").modal("show");
            });
        });

        // Load Delete Confirm
        $(document).on("click", ".btn-delete-supplier", function () {
            var id = $(this).data("id");
            $.get('@Url.Action("Delete", "Suppliers")', { id: id }, function (data) {
                $("#supplierModalContent").html(data);
                $("#supplierModal").modal("show");
            });
        });

        // Submit Create/Edit/Delete
        $(document).on("submit", "#supplierForm", function (e) {
            e.preventDefault();

            $.post($(this).attr("action"), $(this).serialize(), function (res) {
                if (res.success) {
                    $("#supplierModal").modal("hide");
                    location.reload();
                }
            });
        });
    </script>
    
    <style>
        /* Đồng bộ CSS với các trang khác */
        .btn-create, .btn-search, .btn-warning, .btn-danger {
            border-radius: 8px;
            padding: 8px 16px;
            font-size: 0.9rem;
            transition: all 0.2s;
            border: none;
            color: white;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .btn-action {
            width: 32px;
            height: 32px;
            padding: 0;
            border-radius: 6px;
        }

        /* Blue Buttons (Create, Search) */
        .btn-create, .btn-search {
            background-color: #339AF0;
        }

        .btn-create:hover, .btn-search:hover {
            background-color: #2A4A99;
            color: white;
            box-shadow: 0 4px 6px rgba(51, 154, 240, 0.25);
        }

        /* Warning/Edit Button */
        .btn-warning {
            background-color: #f0ad4e;
            color: white;
        }

        .btn-warning:hover {
            background-color: #ec9d4a;
            color: white;
        }

        /* Danger/Delete Button */
        .btn-danger {
            background-color: #E03131;
        }

        .btn-danger:hover {
            background-color: #C92A2A;
            color: white;
        }

        /* Input Styles */
        .form-control:focus {
            box-shadow: none;
            border-color: #dee2e6;
            background-color: #fff !important;
        }
        .input-group-text {
            background-color: #f8f9fa;
        }

        /* Table Hover Effect */
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
}