@model BusinessObject.Models.Supplier
@{
    Layout = null;
}

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold text-primary">
        <i class="bi bi-truck me-2"></i> Thêm Nhà cung cấp mới
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="supplierForm" asp-action="Create">
    @Html.AntiForgeryToken()

    <div class="modal-body pt-4">
        
        <div class="mb-3">
            <label asp-for="SupplierName" class="form-label fw-semibold text-secondary small text-uppercase">
                Tên nhà cung cấp <span class="text-danger">*</span>
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted">
                    <i class="bi bi-building"></i>
                </span>
                <input asp-for="SupplierName" class="form-control border-start-0 ps-0" placeholder="Nhập tên công ty/đối tác..." />
            </div>
            <span asp-validation-for="SupplierName" class="text-danger small mt-1"></span>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label asp-for="Phone" class="form-label fw-semibold text-secondary small text-uppercase">
                    Số điện thoại
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted">
                        <i class="bi bi-telephone"></i>
                    </span>
                    <input asp-for="Phone" class="form-control border-start-0 ps-0" placeholder="Ví dụ: 090123..." />
                </div>
                <span asp-validation-for="Phone" class="text-danger small mt-1"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Email" class="form-label fw-semibold text-secondary small text-uppercase">
                    Email
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0 text-muted">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="example@mail.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small mt-1"></span>
            </div>
        </div>

        <div class="mb-2">
            <label asp-for="Address" class="form-label fw-semibold text-secondary small text-uppercase">
                Địa chỉ
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light border-end-0 text-muted">
                    <i class="bi bi-geo-alt"></i>
                </span>
                <input asp-for="Address" class="form-control border-start-0 ps-0" placeholder="Nhập địa chỉ trụ sở..." />
            </div>
            <span asp-validation-for="Address" class="text-danger small mt-1"></span>
        </div>

    </div>

    <div class="modal-footer border-top-0 pt-0 pb-4 px-4">
        <button type="button" class="btn btn-light text-secondary fw-bold" data-bs-dismiss="modal">
            Hủy bỏ
        </button>
        <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Thêm mới
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}